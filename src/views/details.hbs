<main>
    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="{{cryptoOffer.image}}">
        </div>

        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{cryptoOffer.name}}</h1>
                <h3 id="payment">Payment method: {{cryptoOffer.paymentMethod}}</h3>
                <p id="price"><span>Price: ${{cryptoOffer.price}}</span></p>
                <p id="description">{{cryptoOffer.description}}</p>
            </div>
            {{#if user}}
            <div class="product-btn">
                <!--Only for registered user and author of the publication -->
                {{#if isOwner}}
                <div class="author">
                    <a href="/crypto/{{cryptoOffer._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/crypto/{{cryptoOffer._id}}/delete" class="btn-delete">Delete</a>
                </div>
                {{else}}
                {{#if isBought}}
                <p class="buy-message">You already bought these crypto coins.</p>
                {{else}}
                <a href="/crypto/{{cryptoOffer._id}}/buy" class="btn-buy">Buy</a>
                {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </div>
    </section>
</main>